{
  "version": 2,
  "builds": [
    {
      "src": "datamining/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" },
      "functions": {
        "api/**/*.py": {
            "excludeFiles": "**/*.html"
        }
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "datamining/wsgi.py"
    }
  ]
}